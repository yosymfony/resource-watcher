{
    "name":"yosymfony/resource-watcher",
    "description": "A simple resource watcher using Symfony Finder",
    "keywords": ["resources","watcher","finder","symfony"],
    "license": "MIT",
    "homepage": "http://yosymfony.com",
    "authors": [
        {
            "name": "Victor Puertas",
            "email": "vpgugr@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "symfony/finder": "^2.7|^3.0|^4.0|^5.0"
    },
    "require-dev": {
        "symfony/filesystem": "^2.7|^3.0|^4.0|^5.0",
        "phpunit/phpunit": "^5.7"
    },
    "autoload": {
        "psr-4": {
            "Yosymfony\\ResourceWatcher\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.0-dev"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
